RewriteEngine On

# Handle Angular and React History Mode
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [NC,L]

# Handle PHP files
RewriteCond %{REQUEST_URI} \.php$ [NC]
RewriteRule ^(.*)$ - [L]

# Skip routing for common static files
RewriteCond %{REQUEST_URI} \.(ico|png|jpg|jpeg|gif|svg|css|js|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^.*$ - [NC,L]

# Route everything else to index.php
RewriteRule ^(.*)$ index.php [QSA,L]